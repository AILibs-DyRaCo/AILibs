<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.embed.swing.SwingNode?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.ProgressBar?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.152-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jaicore.search.gui.FXController">

    <top>
        <BorderPane>
            <top>
                <ToolBar>
                    <Button onAction="#play" text="play" />
                    <Button onAction="#step" text="step" />
                    <Button onAction="#back" text="back" />
                    <Button onAction="#reset" text="reset" />
                    <Button onAction="#stop" text="stop" />
                    <Button onAction="#save" text="save" />
                    <Button onAction="#load" text="load" />
                </ToolBar>
            </top>
            <bottom>
                <Slider fx:id="slider">
                    <min>0</min>
                    <max>200</max>
                    <value>150</value>
                    <showTickMarks>true</showTickMarks>
                    <showTickLabels>true</showTickLabels>
                    <majorTickUnit>10</majorTickUnit>
                    <snapToTicks>true</snapToTicks>
                </Slider>
            </bottom>
        </BorderPane>
    </top>

    <center>
        <SplitPane dividerPositions="0.25">
            <items>
                <TabPane>
                    <tabs>
                        <Tab text="1" />
                    </tabs>
                </TabPane>
                <BorderPane>
                   <center>
                       <SwingNode fx:id="swingNode" />
                   </center>
                </BorderPane>
            </items>
        </SplitPane>
    </center>


    <bottom>
        <Slider fx:id="timeline" min="0">
            <showTickMarks>true</showTickMarks>
            <showTickLabels>true</showTickLabels>
        </Slider>
    </bottom>
</BorderPane>
